<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>smart-applications</artifactId>
        <groupId>com.sct</groupId>
        <version>${revision}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.sct</groupId>
    <artifactId>application-security-system</artifactId>
    <packaging>jar</packaging>
    <description>系统的用户安全维护相关的工程</description>

    <properties>
        <start-class>com.sct.application.security.SecuritySystemApplication</start-class>
    </properties>

    <dependencies>
        <!-- sct dependency -->
        <dependency>
            <groupId>com.sct</groupId>
            <artifactId>service-oauth2-resourceserver</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sct</groupId>
            <artifactId>service-security-support-password</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sct</groupId>
            <artifactId>service-main</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sct</groupId>
            <artifactId>service-core-web</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sct</groupId>
            <artifactId>commons-web-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sct</groupId>
            <artifactId>service-database</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sct</groupId>
            <artifactId>service-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sct</groupId>
            <artifactId>commons-logback</artifactId>
        </dependency>

        <!-- spring dependency -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>config/**/*.*</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>config/**/*.*</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <executable>true</executable>
                    <fork>true</fork>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                            <goal>build-info</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>